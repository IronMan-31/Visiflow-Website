<%- include('partials/header') %>

<main class="flex-1">
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
            <div class="text-center">
                <div class="mb-8">
                    <i class="fas fa-water text-6xl text-river-blue mb-4 animate-pulse"></i>
                </div>
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                    Monitor Rivers,<br>
                    <span class="text-river-blue">Protect Our Future</span>
                </h1>
                <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
                    Advanced river monitoring technology that provides real-time data on water quality, 
                    flow rates, and environmental conditions to help preserve our waterways.
                </p>
                <div class="space-x-4">
                    <a href="/signup" class="bg-river-blue text-white px-8 py-4 rounded-lg font-semibold hover:bg-river-dark transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 inline-block">
                        Get Started
                    </a>
                    <a href="#features" class="border-2 border-river-blue text-river-blue px-8 py-4 rounded-lg font-semibold hover:bg-river-blue hover:text-white transition-all duration-200 inline-block">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div id="features" class="py-20 bg-dark-surface">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                    Comprehensive Monitoring Solutions
                </h2>
                <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                    Our platform provides everything you need to monitor and analyze river conditions effectively.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Real-time Monitoring -->
                <div class="bg-dark-card p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 border border-gray-700 hover:border-river-blue/50">
                    <div class="text-center">
                        <div class="bg-river-blue text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-chart-line text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-3">Real-time Data</h3>
                        <p class="text-gray-300">
                            Get instant updates on water quality, temperature, pH levels, and flow rates with our advanced sensor network.
                        </p>
                    </div>
                </div>

                <!-- Environmental Analysis -->
                <div class="bg-dark-card p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 border border-gray-700 hover:border-green-500/50">
                    <div class="text-center">
                        <div class="bg-green-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-leaf text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-3">Environmental Impact</h3>
                        <p class="text-gray-300">
                            Analyze environmental factors and their impact on river ecosystems with comprehensive reporting tools.
                        </p>
                    </div>
                </div>

                <!-- Alert System -->
                <div class="bg-dark-card p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 border border-gray-700 hover:border-orange-500/50">
                    <div class="text-center">
                        <div class="bg-orange-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-bell text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-3">Smart Alerts</h3>
                        <p class="text-gray-300">
                            Receive immediate notifications when water conditions exceed safe thresholds or require attention.
                        </p>
                    </div>
                </div>

                <!-- Data Analytics -->
                <div class="bg-dark-card p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 border border-gray-700 hover:border-purple-500/50">
                    <div class="text-center">
                        <div class="bg-purple-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-chart-bar text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-3">Advanced Analytics</h3>
                        <p class="text-gray-300">
                            Leverage machine learning and predictive analytics to understand long-term trends and patterns.
                        </p>
                    </div>
                </div>

                <!-- Mobile Access -->
                <div class="bg-dark-card p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 border border-gray-700 hover:border-pink-500/50">
                    <div class="text-center">
                        <div class="bg-pink-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-mobile-alt text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-3">Mobile Access</h3>
                        <p class="text-gray-300">
                            Access your river monitoring data anywhere, anytime with our responsive web platform and mobile apps.
                        </p>
                    </div>
                </div>

                <!-- Team Collaboration -->
                <div class="bg-dark-card p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 border border-gray-700 hover:border-cyan-500/50">
                    <div class="text-center">
                        <div class="bg-cyan-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-users text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-3">Team Collaboration</h3>
                        <p class="text-gray-300">
                            Share data, insights, and reports with your team members and stakeholders in real-time.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-gradient-to-r from-river-blue to-river-dark py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Ready to Start Monitoring?
            </h2>
            <p class="text-xl text-blue-100 mb-8 max-w-3xl mx-auto">
                Join thousands of environmental professionals who trust RiverWatch for comprehensive river monitoring solutions.
            </p>
            <a href="/signup" class="bg-white text-river-blue px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 inline-block">
                Start Your Free Trial
            </a>
        </div>
    </div>
</main>

<%- include('partials/footer') %>