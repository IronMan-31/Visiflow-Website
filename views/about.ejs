      }

      .team-bio {
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.6;
        font-size: 0.95rem;
      }

      .footer {
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(12px);
        border-top: 1px solid rgba(59, 130, 246, 0.2);
        margin-top: 60px;
      }

      @media (max-width: 768px) {
        .hero-title {
          font-size: 2.5rem;
        }

