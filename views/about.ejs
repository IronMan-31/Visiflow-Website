    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        background: linear-gradient(
          135deg,
          #0f172a 0%,
          #1e293b 50%,
          #334155 100%
        );
        min-height: 100vh;
        overflow-x: hidden;
        position: relative;
      }

      .background-animation {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
      }

      .floating-droplets {
        position: absolute;
        width: 100%;
        height: 100%;
      }

      .water-droplet {
        position: absolute;
        background: radial-gradient(
          circle at 30% 30%,
          rgba(59, 130, 246, 0.6) 0%,
          rgba(96, 165, 250, 0.4) 40%,
          rgba(147, 197, 253, 0.2) 70%,
          transparent 100%
        );
        border-radius: 50% 50% 50% 0;
        animation: float-droplet linear infinite;
        transform: rotate(-45deg);
      }

      .water-droplet:nth-child(even) {
        background: radial-gradient(
          circle at 30% 30%,
          rgba(14, 165, 233, 0.5) 0%,
          rgba(56, 189, 248, 0.3) 40%,
          rgba(125, 211, 252, 0.2) 70%,
          transparent 100%
        );
      }

      @keyframes float-droplet {
        0% {
          transform: translateY(-100px) rotate(-45deg) scale(0.8);
          opacity: 0;
        }
        10% {
          opacity: 1;
        }
        90% {
          opacity: 1;
        }
        100% {
          transform: translateY(100vh) rotate(-45deg) scale(1.2);
          opacity: 0;
        }
      }

      .river-flow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(
          45deg,
          transparent 0px,
          rgba(59, 130, 246, 0.03) 1px,
          rgba(59, 130, 246, 0.06) 2px,
          transparent 3px,
          transparent 20px
        );
        animation: river-flow 15s linear infinite;
      }

      @keyframes river-flow {
        0% {
          transform: translateX(-20px) translateY(-20px);
        }
        100% {
          transform: translateX(20px) translateY(20px);
        }
      }

      .wave-animation {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 400px;
        background: linear-gradient(
          180deg,
          transparent 0%,
          rgba(59, 130, 246, 0.05) 50%,
          rgba(96, 165, 250, 0.08) 100%
        );
        overflow: hidden;
      }

      .wave {
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 600px;
        height: 600px;
        margin-left: -300px;
        margin-bottom: -300px;
        background: radial-gradient(
          ellipse,
          rgba(59, 130, 246, 0.12) 0%,
          rgba(96, 165, 250, 0.08) 30%,
          rgba(147, 197, 253, 0.04) 50%,
          transparent 80%
        );
        border-radius: 45%;
        animation: wave-rotate 25s linear infinite;
      }

      .wave:nth-child(2) {
        animation: wave-rotate 18s linear infinite reverse;
        background: radial-gradient(
          ellipse,
          rgba(14, 165, 233, 0.1) 0%,
          rgba(56, 189, 248, 0.06) 30%,
          rgba(125, 211, 252, 0.03) 50%,
          transparent 80%
        );
        width: 450px;
        height: 450px;
        margin-left: -225px;
        margin-bottom: -225px;
      }

      .wave:nth-child(3) {
        animation: wave-rotate 22s linear infinite;
        background: radial-gradient(
          ellipse,
          rgba(96, 165, 250, 0.08) 0%,
          rgba(147, 197, 253, 0.04) 30%,
          rgba(191, 219, 254, 0.02) 50%,
          transparent 80%
        );
        width: 350px;
        height: 350px;
        margin-left: -175px;
        margin-bottom: -175px;
      }

      @keyframes wave-rotate {
        0% {
          transform: rotate(0deg) scale(1);
        }
        50% {
          transform: rotate(180deg) scale(1.1);
        }
        100% {
          transform: rotate(360deg) scale(1);
        }
      }

      .sensor-network {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
      }

      .sensor-node {
        position: absolute;
        width: 8px;
        height: 8px;
        background: rgba(34, 197, 94, 0.8);
        border: 2px solid rgba(34, 197, 94, 0.4);
        border-radius: 50%;
        animation: sensor-pulse 3s ease-in-out infinite;
      }

      .sensor-node::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 30px;
        height: 30px;
        border: 1px solid rgba(34, 197, 94, 0.2);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        animation: sensor-ripple 3s ease-in-out infinite;
      }

      .sensor-node:nth-child(even) {
        background: rgba(59, 130, 246, 0.8);
        border-color: rgba(59, 130, 246, 0.4);
        animation-delay: -1s;
      }

      .sensor-node:nth-child(even)::before {
        border-color: rgba(59, 130, 246, 0.2);
      }

      .sensor-node:nth-child(3n) {
        background: rgba(168, 85, 247, 0.8);
        border-color: rgba(168, 85, 247, 0.4);
        animation-delay: -2s;
      }

      .sensor-node:nth-child(3n)::before {
        border-color: rgba(168, 85, 247, 0.2);
      }

      @keyframes sensor-pulse {
        0%,
        100% {
          opacity: 0.6;
          transform: scale(1);
        }
        50% {
          opacity: 1;
          transform: scale(1.2);
        }
      }

      @keyframes sensor-ripple {
        0% {
          transform: translate(-50%, -50%) scale(0.5);
          opacity: 0.8;
        }
        100% {
          transform: translate(-50%, -50%) scale(2);
          opacity: 0;
        }
      }

      .data-streams {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
      }

      .data-line {
        position: absolute;
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent 0%,
          rgba(34, 197, 94, 0.6) 50%,
          transparent 100%
        );
        animation: data-flow 4s ease-in-out infinite;
      }

      .data-line:nth-child(even) {
        background: linear-gradient(
          90deg,
          transparent 0%,
          rgba(59, 130, 246, 0.6) 50%,
          transparent 100%
        );
        animation-delay: -2s;
      }

      @keyframes data-flow {
        0% {
          width: 0;
          opacity: 0;
        }
        50% {
          width: 200px;
          opacity: 1;
        }
        100% {
          width: 0;
          opacity: 0;
        }
      }

      .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
